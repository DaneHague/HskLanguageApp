<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/hsk4"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 4"
        app:layout_constraintBottom_toTopOf="@+id/hsk6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/hsk5"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hsk6"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hsk6"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/hsk3"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 3"
        app:layout_constraintBottom_toTopOf="@+id/hsk5"
        app:layout_constraintEnd_toStartOf="@+id/hsk4"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hsk1"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 1"
        app:layout_constraintBottom_toTopOf="@+id/hsk3"
        app:layout_constraintEnd_toStartOf="@+id/hsk2"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hsk2"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="#9ADBFA"
        android:text="HSK 2"
        app:layout_constraintBottom_toTopOf="@+id/hsk4"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="232dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/home_page_icon" />

    <Button
        android:id="@+id/btnDictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dictionary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.086" />

</androidx.constraintlayout.widget.ConstraintLayout>